<% include ./partials/header %>

<div class="container">
    <h1>Edit <%=todo.title%></h1>
    <form action="/todos/<%=todo._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="todoTitle">Title</label>
        <input type="text" name="todo[title]" class="form-control" id="todoTitle" value="<%=todo.title%>">
      </div>
      <div class="form-group">
         <label for="form-control">Importance Level</label>
         <select class="form-control" name="todo[level]">
            <option disabled><%=todo.level%></option>
            <option value="Highly Important">Highly Important</option>
            <option value="Medium Importance">Medium Importance</option>
            <option value="Low Importance">Low Importance</option>
        </select>
      </div>
      <div class="form-group">
          <label for="radio">Current Progress</label>
          <div class="radio">
              <label>
                <input type="radio" name="todo[currentProgress]" id="started" value="Started" attr="false">
                Started
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="todo[currentProgress]" id="not_started" value="Not Started">
                Not Started
              </label>
            </div>
            <div class="radio">
              <label>
                <input type="radio" name="todo[currentProgress]" id="finished" value="Finished">
                Finished
              </label>
            </div>
        </div>
    <div class="form-group">
        <label for="locationField">Location</label>
        <div id="locationField">
          <input id="autocomplete" class="form-control" type="text" name="todo[location]" onFocus="geolocate()" value="<%=todo.location%>"></input>
          <a href="#" onClick="document.location.href=fillInAddress();">More Information about the Location</a>
        </div>
    </div>
      
    <div class="form-group">
        <label for="todoDescription">Description</label>
        <textarea class="form-control" name="todo[description]" rows="3" id="todoDescription"><%=todo.description%></textarea>

    </div>
    
    <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>





<% include ./partials/footer %>
